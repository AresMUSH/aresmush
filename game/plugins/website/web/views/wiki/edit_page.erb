<h1><%= @page.display_title %></h1>

<form method="POST" action="/wiki/<%= @page.id %>/edit">

<% if !@page.is_special_page? %>
    <p>
        <label for="name" class="col-xs-2 col-form-label">Page Name:</label>
        <input type="text" name="name" size="100" value="<%= @name %>"/>
    </p>
<% else %>

<input type="hidden" name="name" size="100" value="<%= @name %>"/>

<% end %>
    
    <p>
        <label for="title" class="col-xs-2 col-form-label">Title:</label>
        <input type="text" name="title" size="100" value="<%= @title %>"/>
    </p>

    <p>
        <label for="tags" class="col-xs-2 col-form-label">Tags:</label>
        <input type="text" name="tags" size="100" value="<%= @tags %>"/>
    </p>
    
    <textarea name="text" rows="20"><%= format_input_for_html(@text) %></textarea>
    
        
    <div class="row">
        <div class="col col-xs-12">
            <div class="pull-right">
                
    
    <p> <a href="/wiki/<%= @page.name %>" class="btn btn-default">Cancel</a>  
        <input class="btn btn-default" type="submit" name="preview" value="Preview">
        <input class="btn btn-primary" type="submit" name="save" value="Save"></p>
    
</div>
</div>
</div>
    
</form>

<hr/>

<h3>Preview</h3>

<br/>

<div class="ansi">
    <%= format_markdown_for_html(@text) %>
</div>