<table class="table table-striped">


<thead>
    <tr>
        <th>Scene</th>
        <th>Date</th>
        <th>Participants</th>
    </tr>
</thead>

<tbody>

<% scenes.each do |s| %>
    <tr>
        <td>
        <a href="/scene/<%= s.id %>"><%= s.title %></a>
        
        <% if !s.completed %>
        <span class="label label-warning">In Progress</span>
        <% end %>
        
       <span class="label label-info 
        scene-<%= s.scene_type ? s.scene_type.downcase : "unknown" %>">
            <%= s.scene_type %></span>
       
        
        <p><%= s.summary %></p>
        </td>
        <td>
            <%= s.icdate %>
        </td>
        <td>
            <%= s.participant_names.join(", ")%>
        </td>
    </tr>
<% end %>

</tbody>
</table>