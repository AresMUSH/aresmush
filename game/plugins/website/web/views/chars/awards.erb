
<div class="medal-area">
<div class="medal-row">
  <% @badge_images.each do |i| %>
    <img class="medal" src="/files/<%= i %>" alt="<%= i %>" title="<%= i.before('.').gsub('-', ' ').titleize %>"/>
  <% end %>
</div>

<div class="medal-row">
  <% @medal_images.each do |i| %>
    <img class="medal" src="/files/<%= i %>"  alt="<%= i %>" title="<%= i.before('.').gsub('-', ' ').titleize %>" />
  <% end %>
</div>

<div class="medal-row">
  <% @campaign_images.each do |i| %>
    <img class="medal" src="/files/<%= i %>"  alt="<%= i %>" title="<%= i.before('.').gsub('-', ' ').titleize %>" />
  <% end %>
</div>
</div>

<br/><br/>

<ul>
<% @char.awards.select { |a| a.citation }.each do |award| %>
   <li><b><%= award.award %></b> - <%= award.citation %></li>
<% end %>
</ul>