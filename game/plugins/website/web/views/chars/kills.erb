<table class="table table-striped">

    <thead>
        <tr>
            <th>#</th>
            <th>Date</th>
            <th>Victory</th>
            <th>Scene</th>
        </tr>
    </thead>

    <% @char.kills.to_a.sort_by { |k| k.scene.icdate }.each_with_index do |kill, i| %>

    <tr>
        <td><%=	i + 1 %></td>
        <td><%=	kill.scene.icdate %></td>
        <td><%=	kill.victory %></td>
        <td><a href="/scene/<%= kill.scene.id %>"><%= kill.scene.title %></a></td>
    </tr>

    <% end %>
</table>
