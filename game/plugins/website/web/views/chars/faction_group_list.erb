       <div>

          <h3><%= position %></h3>
          
         
          <% chars.sort_by { |c| c.name }.each do |c| %>
    
          <div class="profile-gallery">
              <% if c.icon %>
               <a href="/char/<%= c.id %>">
                <img class="log-icon" src="<%= c.icon %>" 
                   title="<%= c.name %> - <%= c.group('Position') %>" />
               </a>
               <% else %>
               <a href="/char/<%= c.id %>"><%= c.name %></a>
               <% end %>
          </div>
          <% end %>
      
       </div>

     <div class="clearfix"> </div>
