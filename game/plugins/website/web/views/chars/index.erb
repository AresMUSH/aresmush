<h1>Characters</h1>

<% @factions.each do |faction, faction_chars| %>

  <hr />

<h2><%= faction %></h2>

<div>
      
  <% faction_chars.group_by { |c| c.group('Position') }.each do |position, chars| %>
  
     <div>
         
     <% chars.sort_by { |c| c.name }.each do |c| %>
        <h3><%= position %></h3>
    
        <div class="profile-gallery">
            <% if c.icon %>
             <a href="/char/<%= c.id %>">
              <img class="log-icon" src="<%= c.icon %>" 
                 title="<%= c.name %> - <%= c.group('Position') %>" />
             </a>
             <% end %>
        </div>
    <% end %>
    </div>
    <div class="clearfix" />
    
  <% end %>

</div>

  
  
<% end %>
