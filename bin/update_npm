#!/bin/bash

if [[ $EUID == 0 ]]; then
   echo "This script should not be run as root.  Log out and log back in with your ares user." 
   exit 1
fi

cd /home/ares/aresmush/
rm -rf node_modules

. ~/.nvm/nvm.sh
npm install -g npm
nvm install 16
nvm use 16
npm install -g ember-cli

echo "NPM is updated. You can now start your game like normal."