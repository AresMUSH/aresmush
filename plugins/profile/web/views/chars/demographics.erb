    <div class="col-md-4 col-sm-12 col-xs-12">
            <a href="<%= profile_image_url(@char) %>">
                <img src="<%= profile_image_url(@char) %> " class="profile-image"/>
            </a>
    </div>

    <div class="col-md-8 col-sm-12 col-xs-12">        

        <div class="profile-box">
        <div class="profile-title">
                    <%= AresMUSH::Ranks.military_name(@char) %>
        </div>
        
        <% AresMUSH::Demographics.basic_demographics.sort.each do |d| %>
        <div class="row">
            <div class="col-sm-3">
                    <b><%= d.titlecase %>:</b> 
            </div>
            <div class="col-sm-9">
                    <%= @char.demographic(d) %>
            </div>
        </div>
        <% end %>
        
        <% if AresMUSH::Ranks.is_enabled? %>
        <div class="row">
            <div class="col-sm-3">
                    <b>Rank:</b> 
            </div>
            <div class="col-sm-9">
                    <%= @char.rank %>
            </div>
        </div>
        <% end %>



        <div class="row">
            <div class="col-sm-3">
                    <b>Age:</b> 
            </div>
            <div class="col-sm-9">
                    <%= @char.age %>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-3">
                    <b>Birthdate:</b> 
            </div>
            <div class="col-sm-9">
                    <%= @char.demographic(:birthdate) %>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3">
                    <b>Played By:</b> 
            </div>
            <div class="col-sm-9">
                    <%= @char.demographic(:actor) %>
            </div>
        </div>
        

        
        <div class="profile-divider">
        </div>
        
        
        <% AresMUSH::Demographics.all_groups.keys.sort.each do |g| %>
        <div class="row">
            <div class="col-sm-3">
                    <b><%= g.titlecase %>:</b> 
            </div>
            <div class="col-sm-9">
                    <%= @char.group(g) %>
            </div>
        </div>
        <% end %>


        <% if @char.handle %>
        
        <div class="row">
            <div class="col-sm-3">
                    <b>Player:</b> 
            </div>
            <div class="col-sm-9">
                    <a href="http://arescentral.aresmush.com/handle/<%= @char.handle.name %>"><%= @char.handle.name %></a>
            </div>
        </div>
        
        <% end %>
        </div>
        
    </div>
