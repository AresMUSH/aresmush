<%= header %>
<%= t('fs3combat.damage_title', :name => target.name) %>
<%= t('fs3combat.damage_titlebar') %>
<% damage.each_with_index do |d, index| %>
<%= left(index + 1, 3) -%>
<%= left( d.ictime_str, 13 ) -%>
<%= left( d.description, 25 ) -%>
<%= left( severity(d), 19 ) -%>
<%= center( treatable(d), 7 ) -%>
<%= center( healing(d), 9) %>
<% end %>

%xh<%= t('fs3combat.wound_mod') %>%xn <%= left(wound_mod, 25) -%>
%xh<%= t('magic.magic_energy_mod') %>%xn <%= magic_energy_mod %> (magic) <%= magic_energy_attack_mod -%> (attk)

%xh<%= t('fs3combat.healed_by_title')%>%xn <%= healed_by %>
<% if vehicle_notice %>

%xh<%= vehicle_notice %>%xn
<% end %>

%xhSee https://aresmush.com/fs3/fs3-3/combat.html#damage for damage level descriptions.%xn
<%= footer %>
